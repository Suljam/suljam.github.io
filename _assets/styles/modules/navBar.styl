.navlink
  position absolute
  top 30px
  left 1rem
  p
    border 1px solid darken(primary, 10)
    font-size 20px
    margin-bottom 0!important
    border-radius 3px
    padding 0 0.5em
    cursor pointer
    a
      color darken(primary, 10)
      text-decoration none
      border-bottom 0px solid white
      color forth
  +above(600px)
    display none
.navbar
  width 100%
  position relative
  // top -40px
  +below(600px)
    height 440px
    top -610px!important
    padding-top 12rem
    padding-bottom 2rem
    background-color RGBA(51, 76, 126, 0.975)
    // background-color darken(primary, 10)
    position fixed
    z-index 10
  &.show
    top -60px!important
  // .index.navbar
  //   +above(600px)
  //     margin-top 1rem
  .active
    top -60px!important
  ul
    padding 0
    margin 0
    display block
    +above(600px)
      padding 2rem
      margin-top 50px
      text-align right
    li
      display block
      font-size responsive 14px 22px
      padding-top 1rem
      +below(600px)
        width 100%
        height 44px
        padding 0.75rem 0
        text-align center
        font-size 24px
      +above(600px)
        display inline
        padding 1rem
  a
    text-decoration none
    color white
    padding-top 10px
    position relative
    text-decoration none
    font-size 1rem
    &:before, &:after
      content ''
      position absolute
      transition transform .5s ease
    &:before
      left 0
      bottom 0
      width 100%
      height 2px
      background primary
      transform  scaleX(0)
    &:hover:before
      transform  scaleX(1)
.index .navbar, footer .navbar
    top 1rem
    a
      color white
      &:before
        background white
footer
  .navbar
    +below(600px)
      display none
    // ul
      // margin-top 40px
  +below(600px)
    height 2rem
