.menus
  transition all 1s cubic-bezier(0.68, -0.55, 0.265, 1.55)
.logo
  z-index 4
  width 100%
  background-color rgba(70, 98, 159, 0.95)
  -webkit-clip-path polygon(0 0, 100% 0, 100% 80%, 0% 100%)
  +above(480px)
    -webkit-clip-path polygon(0 100%,80% 0%,100% 0,0 0)
  height 200px
  // +above(480px)
  //   height 320px
  margin-top -230px
  +above(600px)
    position fixed
  svg
    width 52px
    height 30px
    // width 100px
    position absolute
    +below(480px)
      z-index 100
      margin auto
      margin-top 20px
    +above(480px)
      z-index 12
      bottom 70px
      left 20px
      width 105px
      height 60px
  h1
    padding 0
    margin 0
    z-index 12
    position absolute
    bottom 40px
    color white
    font-size 30px
    font-weight 400
    font-family 'HelveticaNeue-UltraLight','Helvetica-Neue', Helvetica
    padding-left 20px
    +above(480px)
      padding-left 0
      left 100px
      font-size 42px
      font-weight 100

