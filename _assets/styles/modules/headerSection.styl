header
  position relative
  z-index 5
  background url('/assets/img/bg-temp.jpg')
  background-size cover
  background-position center
  clip-path: polygon(0 0, 100% 0, 100% 90%, 0% 100%);
  height 560px
  top -10px
  +above(600px)
    top 0
